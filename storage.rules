
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for the restaurant's profile image path
    match /restaurant/{imageFileName} {
      // Allow public read access to restaurant images (e.g., for display on booking pages)
      allow read: if true;
      // Allow write (upload, update, delete) access only for authenticated users (admins)
      allow write: if request.auth != null;
    }

    // Deny all other reads and writes to any other paths by default for security.
    // If you add other storage features, you'll need to add rules for those paths.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
