
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for files under the 'restaurant/' path
    // This is useful if you want to display restaurant images publicly
    match /restaurant/{allPaths=**} {
      allow read: if true;
      // Only allow authenticated users to write (upload, update, delete)
      // to the restaurant path and its subdirectories.
      allow write: if request.auth != null;
    }

    // For any other paths, you might want to deny all access by default
    // or add specific rules. Example:
    // match /{allOtherPaths=**} {
    //   allow read, write: if false;
    // }
  }
}
