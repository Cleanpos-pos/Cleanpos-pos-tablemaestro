
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Bookings:
    // - Anyone can create (make a new booking).
    // - Only authenticated users (admins) can read, update, or delete existing bookings.
    match /bookings/{bookingId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Restaurant Configuration (Settings & Schedule):
    // - Only a specific Admin UID can read or write.
    // IMPORTANT: Replace 'YOUR_ADMIN_UID_HERE' with your actual admin user's UID.
    match /restaurantConfig/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == 'YOUR_ADMIN_UID_HERE';
    }

    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
