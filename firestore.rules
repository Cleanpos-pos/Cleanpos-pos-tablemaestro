
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Bookings: Allow any authenticated user to read and write
    // Consider if you want more granular control (e.g., only specific users can delete)
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null;
    }

    // Restaurant Configuration (Settings, Schedule)
    // Replace 'YOUR_ADMIN_UID_HERE' with the actual UID of your admin user.
    match /restaurantConfig/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == 'YOUR_ADMIN_UID_HERE';
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
