rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /bookings/{bookingId} {
      allow create: if true; // Anyone can create a booking
      allow read, update, delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid)); // Admins can manage
    }

    match /restaurantConfig/{docId} {
      allow read: if true; // Anyone can read restaurant settings and schedule
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid)); // Admins can write
    }

    match /admins/{adminId} {
      // Admins can read and write to the admins collection (to manage other admins)
      allow read, write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
