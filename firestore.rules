rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Customers and their payment-related info
    match /customers/{uid}/{document=**} {
      allow read, write: if request.auth.uid != null && request.auth.uid == uid;
    }

    // Public-readable products and prices synced from Stripe
    match /subscription/{id}/{document=**} {
      allow read: if true;
    }

    match /products/{id}/{document=**} {
        allow read: if true;
    }

    // Restaurant-specific configuration, readable/writable only by the owner
    match /restaurantConfig/{userId}/{document=**} {
      allow read, write: if request.auth.uid != null && request.auth.uid == userId;
    }
    
    // A single public document for any user to see restaurant details.
    // Explicitly prevent any writes from the client.
    match /restaurantConfig/mainRestaurant {
      allow get: if true;
      allow list, create, update, delete: if false;
    }

    // Bookings collection
    match /bookings/{bookingId} {
        // Allow anyone to create a booking (for public page) but only if they set the ownerUID correctly to themselves.
        allow create: if request.auth != null && request.resource.data.ownerUID == request.auth.uid;
        // Allow owner to manage their own booking entries
        allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUID;
    }
  }
}
